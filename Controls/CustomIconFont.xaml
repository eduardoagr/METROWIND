<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="METROWIND.Controls.CustomIconFont"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="customFont">

    <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Label
            FontFamily="{Binding FontFamily, Source={x:Reference customFont}}"
            FontSize="52"
            Text="{Binding TextIcon, Source={x:Reference customFont}}"
            TextColor="{Binding TextIconColor, Source={x:Reference customFont}}" />

        <Label
            Margin="0,4,0,0"
            HorizontalTextAlignment="Center"
            Text="{Binding Caption, Source={x:Reference customFont}}" />
    </VerticalStackLayout>
</ContentView>
