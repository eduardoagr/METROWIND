<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="METROWIND.Controls.CustomImage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ImageCustomControl">

    <VerticalStackLayout>
        <Border
            Stroke="#1A75BE"
            StrokeThickness="4">
            <Image
                Aspect="Fill"
                HeightRequest="100"
                Source="{Binding ImageName, Source={x:Reference ImageCustomControl}}"
                WidthRequest="100" />
            <Border.GestureRecognizers>
                <TapGestureRecognizer
                    Command="{Binding ClickCommand, Source={x:Reference ImageCustomControl}}"
                    CommandParameter="{Binding Parameters, Source={x:Reference ImageCustomControl}}" />
            </Border.GestureRecognizers>
        </Border>

        <Label
            Margin="0,10,0,0"
            HorizontalTextAlignment="Center"
            Text="{Binding Caption, Source={x:Reference ImageCustomControl}}"
            TextColor="Black" />

    </VerticalStackLayout>
</ContentView>
