<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="METROWIND.Controls.CustomImage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="ImageCustomControl">

    <HorizontalStackLayout>
        <Border
            Margin="10"
            Padding="10"
            HorizontalOptions="Start"
            Stroke="#1A75BE"
            StrokeThickness="2">
            <Image
                Aspect="AspectFit"
                HeightRequest="40"
                Source="{Binding ImageName, Source={x:Reference ImageCustomControl}}"
                VerticalOptions="Center"
                WidthRequest="40" />
            <Border.GestureRecognizers>
                <TapGestureRecognizer
                    Command="{Binding ClickCommand, Source={x:Reference ImageCustomControl}}"
                    CommandParameter="{Binding Parameters, Source={x:Reference ImageCustomControl}}" />
            </Border.GestureRecognizers>
        </Border>

        <Label
            Padding="10"
            HorizontalTextAlignment="Center"
            Text="{Binding Caption, Source={x:Reference ImageCustomControl}}"
            TextColor="Black"
            VerticalTextAlignment="Center" />

    </HorizontalStackLayout>
</ContentView>
