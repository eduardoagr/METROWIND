<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="METROWIND.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ccontrols="clr-namespace:METROWIND.Controls"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
    xmlns:model="clr-namespace:METROWIND.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:METROWIND.ViewModel"
    x:DataType="vm:MainPageViewModel">

    <ccontrols:MvvmMap
        ItemsSource="{Binding Pins}"
        MapType="Hybrid">
        <ccontrols:MvvmMap.ItemTemplate>
            <DataTemplate x:DataType="model:PinModel">
                <maps:Pin
                    Address="{Binding Address}"
                    Label="{Binding Label}"
                    Location="{Binding Location}" />
            </DataTemplate>
        </ccontrols:MvvmMap.ItemTemplate>
    </ccontrols:MvvmMap>


</ContentPage>
